{
  // ========== Window & Workbench ==========
  "window.title": "${rootName} - ${activeEditorShort}",
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Catppuccin Latte",
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.productIconTheme": "feather-vscode",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.enableStickyScroll": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.sh": "default",
    "*.eot": "default",
    "*.svg": "default"
  },

  // ========== Editor Core Settings ==========
  "editor.fontSize": 16,
  "editor.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.45,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.accessibilitySupport": "off",

  // ========== Editor Visual Effects ==========
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.guides.bracketPairs": "active",
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": true,
  "editor.semanticHighlighting.enabled": true,

  // ========== Editor Behavior ==========
  "editor.inlineSuggest.enabled": true,
  "editor.snippetSuggestions": "inline",
  "editor.suggestSelection": "first",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.find.addExtraSpaceOnTop": false,
  "editor.hover.sticky": true,
  "editor.stickyScroll.enabled": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",

  // ========== Code Actions ==========
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ========== Files & Explorer ==========
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": false,
  "files.autoGuessEncoding": true,
  // Associations - 语言与文件关联 (按需: 开发小程序时使用)
  // "files.associations": {
  //   "*.cjson": "jsonc",
  //   "*.wxss": "css",
  //   "*.wxs": "javascript",
  //   "pages.jsom": "jsonc",
  //   "manifest.json": "jsonc"
  // },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,
  // File Nesting - 文件嵌套 (可选: 根据个人偏好)
  // updated 2025-09-10 05:03
